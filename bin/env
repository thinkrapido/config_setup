function zj() {
    ZELLIJ_AUTO_ATTACH=1
    if [[ -z "$ZELLIJ" ]]; then
        if [[ "$ZELLIJ_AUTO_ATTACH" == "true" ]]; then
            zellij attach -c
        else
            zellij
        fi

        if [[ "$ZELLIJ_AUTO_EXIT" == "true" ]]; then
            exit
        fi
    fi
}

function completion() {
    for c in ~/.nix-profile/share/bash-completion/completions/* ; do
        . $c
    done
}

completion

[ -e ~/.no-zellij ] || zj

[ -e /home/rodisca/.sdkman/bin/sdkman-init.sh ] && . /home/rodisca/.sdkman/bin/sdkman-init.sh

