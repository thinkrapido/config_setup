export PATH=$HOME/.surrealdb:$PATH


function zj() {
    ZELLIJ_AUTO_ATTACH=1
    if [[ -z "$ZELLIJ" ]]; then
        if [[ "$ZELLIJ_AUTO_ATTACH" == "true" ]]; then
            zellij attach -c
        else
            zellij
        fi

        if [[ "$ZELLIJ_AUTO_EXIT" == "true" ]]; then
            exit
        fi
    fi
}

function conda() {
    # >>> conda initialize >>>
    # !! Contents within this block are managed by 'conda init' !!
    __conda_setup="$('/home/jbc/Software/anaconda3/bin/conda' 'shell.bash' 'hook' 2> /dev/null)"
    if [ $? -eq 0 ]; then
        eval "$__conda_setup"
    else
        if [ -f "/home/jbc/Software/anaconda3/etc/profile.d/conda.sh" ]; then
            . "/home/jbc/Software/anaconda3/etc/profile.d/conda.sh"
        else
            export PATH="/home/jbc/Software/anaconda3/bin:$PATH"
        fi
    fi
    unset __conda_setup
    # <<< conda initialize <<<
}



[ -e ~/.no-zellij ] || zj

[ -e ~/.conda/yes ] && conda

[ -e /home/rodisca/.sdkman/bin/sdkman-init.sh ] && . /home/rodisca/.sdkman/bin/sdkman-init.sh

eval "$(starship init bash)"

